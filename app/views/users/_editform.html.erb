<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label "User Status: " %>
    <%= form.select :user_status, ['User', 'Host'], id: :user_user_status %>
  </div>

  <div class="field">
    <%= form.label "Address: " %>
    <%= form.text_field :address, id: :user_address %>
  </div>

  <div class="field">
    <%= form.label "Name: " %>
    <%= form.text_field :name, id: :user_name %>
  </div>

  <div class="field">
    <%= form.label "Email: " %>
    <%= form.text_field :email, id: :user_email %>
  </div>

  <div class="field">
    <%= form.label "Phone Number: " %>
    <%= form.text_field :phone_number, id: :user_phone_number %>
  </div>

  <div class="field">
    <%= form.label "Image: " %>
    <%= form.text_field :image, id: :user_image %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
