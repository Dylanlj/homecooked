<!-- Navbar is fixed to the top of the page, even when scrolling -->
<nav class="navbar navbar-default navbar-fixed-top">
  <div class="container-fluid">
    <div class="navbar-header">
      <%= link_to analytics_path, class: "navbar-brand analytics" do %><span class="glyphicon glyphicon-eye-open navbar-brand"></span>Analytics<% end %>
      <a class="navbar-brand" href="/">HomeCooked</a>
    </div>
    <ul class="nav navbar-nav navbar-left">
      <% if @categories %>
        <li class="dropdown">
          <a class="dropdown-toggle cat-list" data-toggle="dropdown" href="#">Categories
          <span class="caret"></span></a>
          <ul class="dropdown-menu">
            <% @categories.each do |category| %>
              <li>
                <%= link_to meals_category_path(id: category.id), method: :put, class: "cat-list" do %>
                  <%= category.name %>
                <% end %>
              </li>
            <% end %>
          </ul>
        </li>
      <% end %>
      <% if current_user && !current_page?(user_path(current_user)) %>
        <li class="cat-link"><%= link_to user_path(current_user) do %><span class="glyphicon glyphicon-home"></span> Home <% end %></li>
      <% end %>
      <% if current_user %>
        <li class="cat-link"><%= link_to reservations_path do %><span class="glyphicon glyphicon-list-alt"></span> Reservations <% end %></li>
      <% end %>
      <% if current_user %>
        <li class="cat-link"><%= link_to logout_path do %><span class="glyphicon glyphicon-log-out"></span> Logout <% end %></li>
      <% else %>
        <li class="cat-link"><%= link_to new_user_path do %><span class="glyphicon glyphicon-user"></span> Sign Up <% end %></li>
        <li class="cat-link"><%= link_to login_path do %><span class="glyphicon glyphicon-log-in"></span> Login <% end %></li>
      <% end %>
    </ul>
  </div>
</nav>